<UserControl x:Class="Screens_01.FaceMakerTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="400">
    <Grid>
        <Canvas x:Name="myCanvas" Width="400" Height="200">
            <Image x:Name="imgHair"   Width="200" Height="50" Canvas.Top="0"   Canvas.Left="100"/>
            <Image x:Name="imgEyes"   Width="200" Height="50" Canvas.Top="50"  Canvas.Left="100"/>
            <Image x:Name="imgNose"   Width="200" Height="50" Canvas.Top="100" Canvas.Left="100"/>
            <Image x:Name="imgMouth"  Width="200" Height="50" Canvas.Top="150" Canvas.Left="100"/>
        </Canvas>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,10">
            <Button Content="Hair ←" Click="btnHairPrev_Click" Margin="5"/>
            <Button Content="Hair →" Click="btnHairNext_Click" Margin="5"/>

            <Button Content="Eyes ←" Click="btnEyePrev_Click" Margin="5"/>
            <Button Content="Eyes →" Click="btnEyeNext_Click" Margin="5"/>

            <Button Content="Nose ←" Click="btnNosePrev_Click" Margin="5"/>
            <Button Content="Nose →" Click="btnNoseNext_Click" Margin="5"/>

            <Button Content="Mouth ←" Click="btnMouthPrev_Click" Margin="5"/>
            <Button Content="Mouth →" Click="btnMouthNext_Click" Margin="5"/>

            <Button Content="Random Face" Click="Add_Face_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</UserControl>
